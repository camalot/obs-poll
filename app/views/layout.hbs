<!doctype html>
<html>

<head>
	<title>{{site.title}} :: {{page.title}}</title>
	<link rel="stylesheet" href="//fonts.googleapis.com/icon?family=Material+Icons">
	<link rel="stylesheet" href="//code.getmdl.io/1.3.0/material.deep_purple-indigo.min.css">
	<link rel="stylesheet" href="//fonts.googleapis.com/css?family=Roboto:regular,bold,italic,thin,light,bolditalic,black,medium&amp;lang=en">
	<link href="//cdn.materialdesignicons.com/2.6.95/css/materialdesignicons.min.css" media="all" rel="stylesheet" type="text/css" />
	<link href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" rel="stylesheet" type="text/css" />
	<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
	<script defer src="//code.getmdl.io/1.3.0/material.min.js"></script>
	<script defer src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
	<link rel="stylesheet" href="/assets/css/material.css" />
	{{{block 'head'}}}
</head>

<body>
	<div class="mdl-layout mdl-js-layout mdl-layout--fixed-header
	            mdl-layout--fixed-tabs">
		<header class="mdl-layout__header mdl-layout__header--waterfall">
			<div class="mdl-layout__header-row">
				<span class="mdl-layout-title">{{page.title}}</span>
				<div class="mdl-layout-spacer"></div>
				{{#if user}}
				<label class="mdl-button mdl-js-button mdl-button--icon" data-upgraded=",MaterialButton" title="notifications">
					<i class="mdi mdi-bell-outline">alert</i>
				</label>

				<a class="mdl-button mdl-js-button mdl-button--icon" data-upgraded=",MaterialButton" href="/me">
					<img src="{{user.logo}}" style="height:32px; width:32px;" />
				</a>
				<a class="mdl-button mdl-js-button mdl-button--icon" data-upgraded=",MaterialButton" href="/logout" title="logout">
					<i class="mdi mdi-logout">logout</i>
				</a>
				{{else}}
				<a class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent mdl-color--orange-500 mdl-color-text--white"
				 href="/login" title="login">Login</a>&nbsp;
				{{/if}}
			</div>
			<!-- Tabs -->
			{{{block 'header'}}}

		</header>

		<main class="mdl-layout__content mdl-color--grey-100 ">
			{{{body}}}
		</main>
		<footer class="mdl-mini-footer ">
			<div class="mdl-mini-footer__left-section ">
				<div class="mdl-logo "></div>
				<ul class="mdl-mini-footer__link-list ">
					<li>
						<a href="# ">Privacy &amp; Terms</a>
					</li>
				</ul>
			</div>
		</footer>
	</div>
	{{#if message}}
	<script>
		$(function () {
			toastr.options = {
				"closeButton ": true,
				"debug ": false,
				"newestOnTop ": false,
				"progressBar ": false,
				"positionClass ": "toast-top-center ",
				"preventDuplicates ": true,
				"showDuration ": "300 ",
				"hideDuration ": "5000 ",
				"timeOut ": "-1 ",
				"extendedTimeOut ": "1000 ",
				"showEasing ": "swing ",
				"hideEasing ": "linear ",
				"showMethod ": "fadeIn ",
				"hideMethod ": "fadeOut "
			};
			{ { #each message } }
			toastr["error "]("{{this}} ");
			{
				{
					/each}}
				});
	</script> {{/if}}{{{block 'scripts'}}}
	{{!-- <script src="/assets/js/material-dialog.js"></script> --}}
</body>

</html>
